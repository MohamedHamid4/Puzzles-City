<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/levelPuzzle"
android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/levelNumber"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_80sdp"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/background_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTextLevel"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_80sdp"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@drawable/background_level"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/itemTextlock"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_80sdp"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/background_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTextUnlock"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_80sdp"
        android:gravity="center"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/background_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:isIndicator="false"
        android:numStars="5"
        android:stepSize="0.5"
        app:layout_constraintEnd_toStartOf="@+id/itemTextlock"
        app:layout_constraintStart_toEndOf="@+id/itemTextLevel"
        app:layout_constraintTop_toTopOf="@id/levelNumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>

